extends layout

block content
  h1 #{title}: #{book.title}
  
  if book_bookinstances.length
    p #[strong Delete the following books before attempting to delete this book.]

    div(style='margin-left:20px;margin-top:20px')
      h4 BookInstances

      dl
      each bookinstance in book_bookinstances
        dt(style='margin-top:20px')
          a(href=bookinstance.url) #{book.title}
        dd #[strong Imprint:] #{bookinstance.imprint}
        dd #[strong Status:] #{bookinstance.status}
        dd #[strong Due back:] #{bookinstance.due_back_formatted}
  else
    p Do you really want to delete this book?

    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden',name='bookid', required='true', value=book._id)
        button.btn.btn-primary(type='submit') Delete